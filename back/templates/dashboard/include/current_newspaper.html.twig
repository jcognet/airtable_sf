<div class="section-light about-me" id="about-me">
    <div class="container">
        <div class="column is-12 about-me">
            <h1 class="title has-text-centered section-title">Newsletter</h1>
        </div>
        <div class="columns is-multiline">
            <div
                class="column is-6 has-vertically-aligned-content"
                data-aos="fade-right"
            >
                <p class="is-larger">
                    <a href="{{ path('newsletter_content_show', {'date': newspaper_date|date('Y-m-d') }) }}"
                       title="Voir le journal du  {{ newspaper_date|date('d/m/Y') }}"
                       target="_blank"
                    >
                        &emsp;&emsp;<strong>Journal du {{ newspaper_date|date('d/m/Y') }}</strong>
                    </a>
                </p>
                <br/>
                <p>
                    {% set bot_doux =  bot_doux(newspaper) %}
                    {% if bot_doux is not null %}
                        {{ bot_doux.content }}<br/>
                    {% endif %}
                </p>
                <div class="is-divider"></div>
                <div class="columns about-links">
                    <div class="column">
                        <p class="heading">
                            <strong>Passeport</strong>
                        </p>
                        <p class="subheading">
                            <a href="{{ passport_url }}"
                               title="Voir le lien pour le passeport + CI"
                               target="_blank"
                            >
                                ➡
                            </a>
                        </p>
                    </div>
                    <div class="column">
                        <p class="heading">
                            <strong>Accès</strong>
                        </p>
                        <p class="subheading">
                            <a href="{{ path('newsletter_content_show', {'date': newspaper_date|date('Y-m-d') }) }}"
                               title="Voir le email du  {{ newspaper_date|date('d/m/Y') }}"
                               target="_blank"
                            >
                                &#128240;
                            </a>
                        </p>
                    </div>
                    {% if kpi.article_image_no_concept_count is defined %}
                        <div class="column">
                            <p class="heading">
                                <strong>En cours</strong>
                            </p>
                            <p class="subheading">
                                {% set class = 'is-danger' %}
                                {% if kpi.article_image_no_concept_count <20 %}
                                    {% set class = 'is-sucess' %}
                                {% elseif kpi.article_image_no_concept_count <30 %}
                                    {% set class = 'is-warning' %}
                                {% endif %}
                            <article class="message {{ class }}">
                                <div class="message-body">
                                    {{ kpi.article_image_no_concept_count }}
                                </div>
                            </article>
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="column is-6 right-image " data-aos="fade-left">
                {% set main_image = main_image(newspaper) %}
                {% if main_image is not null %}
                    <a
                        href="{{ absolute_url( path('img_normal', {'pathImage': main_image.url.picture.id})) }}"
                        title="Voir l'image taille réelle"
                        target="_blank"
                    >
                        <img
                            class="is-rounded"
                            src="{{ absolute_url(path('img_thumbnail', {'pathImage': main_image.url.picture.id})) }}?format=main_image"
                            alt="{{ main_image.content }}"
                        />
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
