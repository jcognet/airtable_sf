{% if previous_newspapers|length>0 %}
    <div class="section-dark my-work" id="my-work">
        <div class="container">
            <div
                class="columns is-multiline"
                data-aos="fade-in"
                data-aos-easing="linear"
            >
                <div class="column is-12">
                    <h1 class="title has-text-centered section-title">Précédents journaux</h1>
                </div>
                {% for previous_newspaper in previous_newspapers %}
                    <div class="column is-3">
                        <a href="{{ path('newsletter_content_show', {'date': previous_newspaper.date|date('Y-m-d') }) }}"
                           title="Voir le email du {{ previous_newspaper.date|date('d/m/Y') }}"
                           target="_blank"
                        >
                            {% set main_image_previous_newspaper = main_image(previous_newspaper) %}
                            {% if main_image_previous_newspaper is not null %}
                                <figure
                                    class="image is-2by1 work-item"
                                    style="background-image: url('{{ absolute_url(path('img_thumbnail', {'pathImage': main_image_previous_newspaper.url.picture.id})) }}?format=main_image_previous')"
                                ></figure>
                            {% endif %}
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
