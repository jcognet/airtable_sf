{% extends './page/base.html.twig' %}
{% block body %}
    <div class="section-light">
        <div class="container">
            <nav class="breadcrumb" aria-label="breadcrumbs">
                <ul>
                    <li><a href="{{ url_front }}">Dashboard</a></li>
                    <li>Quiz</li>
                </ul>
            </nav>
            <div
                class="column is-12 about-me"
                data-aos="fade-in"
                data-aos-easing="linear"
            >
                <h1 class="title has-text-centered">
                    {{ question.question }}
                </h1>
            </div>
            <div>
                {% for proposed_question in question.randomizedQuestions %}
                    <div class="mb-4">
                        <div
                            class="button {% if proposed_question == question.answer %}is-success{% elseif answer == code_question_key(proposed_question) %}is-danger{% else %}is-inverted{% endif %} is-rounded">
                            {{ proposed_question }}
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% if question.explanation %}
                <div class="box">
                    {{ question.explanation|markdown_to_html }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
